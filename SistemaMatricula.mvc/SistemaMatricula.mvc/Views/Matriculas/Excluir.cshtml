@model Aluno

@{
    ViewData["Title"] = "Deletar Registro";
}


<div class="container bg-dark p-5 rounded-5 w-50">

    <div class="mb-4 text-center">
        <h1 class="text-light">Excluir Registro</h1>
    </div>

    <form method="post" asp-controller="Matriculas" asp-action="Excluir">
        <!-- Recuperando a matricula Id enviado da rota em um input que não aparecerá na tela.-->
        <input type="hidden" asp-for="MatriculaId" />

        <h2 class="text-light mb-4" style="font-size: 1.5rem;">Tem certeza que deseja excluir o registro abaixo?</h2>


        <div class="mb-3">
            <label for="Nome" class="form-label text-light fw-bold">Nome</label>
            <input type="text" class="form-control" asp-for="Nome" id="Nome" placeholder="Nome Completo" disabled> <!-- Disabled nos inputs para apenas visualizarem os dados sem poder editado-->
        </div>

        <div class="mb-3">
            <label for="Curso" class="form-label text-light fw-bold">Curso</label>
            <input type="text" class="form-control" asp-for="Curso" id="Curso" placeholder="Informe o Curso em que o aluno está vinculado." disabled>
        </div>

        <div class="mb-3">
            <label for="Unidade" class="form-label text-light fw-bold">Unidade</label>
            <input type="text" class="form-control" asp-for="Unidade" id="Unidade" placeholder="Digite a Unidade em que o aluno está vinculado." disabled>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <!-- Navegação para retornar a anterior-->
            <a type="button" class="btn btn-primary w-50" asp-controller="Matriculas" asp-action="Index">Voltar</a>
        </div>

    </form>
</div>